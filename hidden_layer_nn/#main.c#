#include <stdio.h>

#define Happy 0.8

#define SAD_PRED_IDX 0
#define SICK_PRED_IDX 1
#define ACTIVE_PRED_IDX 2

#define IN_LEN 3
#define OUT_LEN 3
#define HID_LEN 3

#include "simple_neural_network.c"

int main() {
  double hidden_pred_vector[HID_LEN];
  double prediction[3];
  double in_to_hid_weight[OUT_LEN][IN_LEN] = { {1, 1, 1}, // hid[0]
					       {1, 1, 1}, // hid[1]
					       {1, 1, 1} // hid[2]
  };

  double hid_to_out_weight[OUT_LEN][HID_LEN] = { {1, 1, 1}, // SAD
						 {1, 1, 1}, // SICK
						 {1, 1, 1} // ACTIVE
  };
  
  //                       temp hum air_q
  double _input[IN_LEN] = { 1, 1, 1 };

  hidden_layer_nn(_input, IN_LEN, HID_LEN, in_to_hid_weight, OUT_LEN, hid_to_out_weight, prediction, hidden_pred_vector);

  printf("Sad prediction : %.2f\r\n", prediction[SAD_PRED_IDX]);
  printf("Sick prediction : %.2f\r\n", prediction[SICK_PRED_IDX]);
  printf("Active prediction : %.2f\r\n", prediction[ACTIVE_PRED_IDX]);
  
  return 0;
}
  

  
